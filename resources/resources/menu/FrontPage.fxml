<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.menu.FrontPageController">
   <children>
      <Label alignment="CENTER" prefHeight="100.0" prefWidth="638.0" text="Minesweeper">
         <font>
            <Font name="System" size="30.0" />
         </font>
      </Label>
      <Label text="Choose a Gamemode:">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <VBox alignment="CENTER">
         <children>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onPressClassic" prefHeight="35.0" prefWidth="150.0" text="Classic">
               <font>
                  <Font name="System" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onPressMultiplayer" prefHeight="35.0" prefWidth="150.0" text="Multiplayer">
               <font>
                  <Font name="System" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Label text="Experimental Gamemodes">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </Label>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onPressNoFlags" prefHeight="35.0" prefWidth="150.0" text="No flags">
               <font>
                  <Font name="System" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onPressMoving" prefHeight="35.0" prefWidth="150.0" text="Moving">
               <font>
                  <Font name="System" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onPressScenario" prefHeight="35.0" prefWidth="150.0" text="Scenario">
               <font>
                  <Font name="System" size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>
